<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '/lego/addSet'}) %>

    <div class="container" style="padding-top: 80px;">
        <div class="row">
            <main class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <h2>Add Set</h2>
                        <hr />
                        <form method="POST" action="/lego/addSet">
                            <div class="mb-3">
                                <label for="name" class="form-label">Set Name</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="number" class="form-control" id="year" name="year" required>
                            </div>
                            <div class="mb-3">
                                <label for="num_parts" class="form-label">Number of Parts</label>
                                <input type="number" class="form-control" id="num_parts" name="num_parts" required>
                            </div>
                            <div class="mb-3">
                                <label for="img_url" class="form-label">Image URL</label>
                                <input type="url" class="form-control" id="img_url" name="img_url" required>
                            </div>
                            <div class="mb-3">
                                <label for="theme_id" class="form-label">Theme</label>
                                <select class="form-select" id="theme_id" name="theme_id" required>
                                    <option value="">Select Theme</option>
                                    <% themes.forEach(theme => { %>
                                        <option value="<%= theme.id %>"><%= theme.name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="set_num" class="form-label">Set Number</label>
                                <input type="text" class="form-control" id="set_num" name="set_num" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Set</button>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
